// CaesarCode.cpp: определяет точку входа для консольного приложения.
//

#include "stdafx.h"
#include <conio.h>
#include <string.h>
#pragma warning(disable :4996)

char buf[256];
int len=0;
int key;

int _tmain(int argc, char* argv[])
{
	
	FILE *In=fopen("in.txt","r");
	FILE *Out=fopen("out.txt","w");
	
	if (In==NULL)
	{
		printf("Error: in file not found\n");
	}
	
	printf("Please enter KEY:");
	scanf("%d",&key);

	while (!feof(In))
	{
		fgets(buf,256,In);
	}
	fclose(In);
	
	len=strlen(buf);


	for (int i = 0; i < len; i++)
	{
		buf[i]+=key;
		fprintf(Out,"%c",buf[i]);
	}

	fclose(Out);

	printf("\nFinish...press any key\n");
	getch();
	return 0;
}

